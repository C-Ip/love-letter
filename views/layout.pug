doctype html
html
  head
    title= title
    link(href="https://maxcdn.bootstrapcdn.com/bootswatch/4.0.0-beta.2/litera/bootstrap.min.css", rel="stylesheet", integrity="sha384-lkgQ9dbCUIEmD/snbBWVxXIIKujePPzSkLp4oc204fayDp2eA0I+xkhPBZUaz6G4", crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
     .container
       .navbar-header
       a.navbar-brand(href='/') Home
       a.navbar-brand(href='/rules') Rules
       if !user
        a#register.navbar-brand.pull-right(href='/registration') Register
        a#login.navbar-brand.pull-right(href='/login') Login
       else
        a#account.navbar-brand.pull-right(href='/users') #{user.username}
        a#logout.navbar-brand.pull-right(href='logout') Logout
    img#logo(src='/images/logo.jpg')
block content

